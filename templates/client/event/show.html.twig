{% extends 'base.html.twig' %}

{% block title %}{{ event.titre }} - Prestige{% endblock %}

{% block stylesheets %}
<style>
    :root {
        --gold-primary: #c5a059;
        --gold-hover: #b48c3e;
        --dark-bg: #0f172a;
        --darker-bg: #0a0f1d;
        --text-muted: #94a3b8;
        --white: #ffffff;
    }

    body {
        background-color: var(--darker-bg);
        color: var(--white);
        font-family: 'Playfair Display', serif;
    }

    .prestige-event-container {
        padding: 80px 0;
    }

    .event-card-prestige {
        background: var(--dark-bg);
        border: 1px solid rgba(197, 160, 89, 0.2);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }

    .event-image-wrapper {
        position: relative;
        height: 100%;
        min-height: 500px;
    }

    .event-image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .event-image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to right, rgba(15, 23, 42, 0) 0%, rgba(15, 23, 42, 0.8) 100%);
    }

    .event-content {
        padding: 50px;
    }

    .category-badge {
        background: rgba(197, 160, 89, 0.1);
        color: var(--gold-primary);
        border: 1px solid var(--gold-primary);
        padding: 6px 16px;
        border-radius: 50px;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 700;
        margin-bottom: 20px;
        display: inline-block;
    }

    .event-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 15px;
        background: linear-gradient(to right, #fff, var(--gold-primary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .event-location {
        color: var(--gold-primary);
        font-size: 1.1rem;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .event-description {
        color: var(--text-muted);
        line-height: 1.8;
        font-size: 1.05rem;
        margin-bottom: 40px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-bottom: 40px;
        padding: 30px;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 15px;
    }

    .info-item {
        text-align: center;
    }

    .info-label {
        display: block;
        color: var(--text-muted);
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 5px;
    }

    .info-value {
        display: block;
        color: var(--white);
        font-weight: 600;
        font-size: 1.1rem;
    }

    .reservation-box {
        background: rgba(197, 160, 89, 0.05);
        padding: 30px;
        border-radius: 15px;
        border: 1px solid rgba(197, 160, 89, 0.1);
    }

    .form-label-prestige {
        color: var(--gold-primary);
        font-weight: 600;
        margin-bottom: 10px;
    }

    .form-control-prestige {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(197, 160, 89, 0.3);
        color: #fff;
        padding: 12px;
        border-radius: 8px;
    }

    .btn-prestige-reserve {
        background: var(--gold-primary);
        color: var(--darker-bg);
        border: none;
        padding: 15px 30px;
        border-radius: 8px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        width: 100%;
        margin-top: 20px;
        transition: all 0.3s;
    }

    .btn-prestige-reserve:hover {
        background: var(--gold-hover);
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(197, 160, 89, 0.2);
    }

    .btn-back {
        color: var(--text-muted);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-top: 30px;
        transition: color 0.3s;
    }

    .btn-back:hover {
        color: var(--gold-primary);
    }
</style>
{% endblock %}

{% block body %}
<div class="container prestige-event-container">
    <div class="event-card-prestige">
        <div class="row g-0">
            <div class="col-lg-5">
                <div class="event-image-wrapper">
                    <img src="{{ asset('images/' ~ event.image) }}" alt="{{ event.titre }}">
                    <div class="event-image-overlay"></div>
                </div>
            </div>

            <div class="col-lg-7">
                <div class="event-content">
                    <span class="category-badge">{{ event.category.name }}</span>
                    <h1 class="event-title">{{ event.titre }}</h1>
                    
                    <div class="event-location">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>{{ event.lieu.nom }} – {{ event.lieu.adresse }}</span>
                    </div>

                    <p class="event-description">{{ event.description }}</p>

                    <div class="info-grid">
                        <div class="info-item">
                            <span class="info-label">Date</span>
                            <span class="info-value">{{ event.date|date('d/m/Y') }}</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Prix</span>
                            <span class="info-value" style="color: var(--gold-primary);">{{ event.prix }} DT</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Disponibilité</span>
                            <span class="info-value">{{ event.nombreDePlaces }} Places</span>
                        </div>
                    </div>

                    <div class="reservation-box">
                        {% if event.nombreDePlaces > 0 %}
                            <form method="post" action="{{ path('client_event_reserve', {id: event.id}) }}">
                                <div class="mb-3">
                                    <label for="tickets" class="form-label-prestige">Nombre de convives :</label>
                                    <input type="number" name="tickets" id="tickets" class="form-control form-control-prestige w-100" min="1" max="{{ event.nombreDePlaces }}" value="1" required>
                                </div>
                                <input type="hidden" name="_token" value="{{ csrf_token('reserve' ~ event.id) }}">
                                <button type="submit" class="btn-prestige-reserve">Confirmer la Réservation</button>
                            </form>
                        {% else %}
                            <div class="text-center py-3">
                                <span class="badge bg-danger p-3 w-100" style="font-size: 1rem; text-transform: uppercase; letter-spacing: 2px;">Événement Complet</span>
                            </div>
                        {% endif %}
                    </div>

                    <a href="{{ path('client_event_index') }}" class="btn-back">
                        <i class="fas fa-long-arrow-alt-left"></i> Retour à la collection d'événements
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
