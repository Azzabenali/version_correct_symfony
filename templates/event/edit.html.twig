{% extends 'base_admin.html.twig' %}

{% block title %}Modifier Conférence - Administration Prestige{% endblock %}

{% block page_title %}Modifier une conférence{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --gold-primary: #c5a059;
            --gold-hover: #b48c3e;
            --dark-bg: #0f172a;
            --text-muted: #64748b;
        }

        .prestige-container {
            max-width: 900px;
            margin: 2rem auto;
            background: white;
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            border: 1px solid #f1f5f9;
        }

        .prestige-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #f8fafc;
        }

        .prestige-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--dark-bg);
            margin: 0;
        }

        /* Style des boutons */
        .btn-prestige {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.875rem 1.5rem;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            cursor: pointer;
            border: none;
        }

        .btn-prestige-primary {
            background: var(--dark-bg);
            color: white;
        }

        .btn-prestige-primary:hover {
            background: var(--gold-primary);
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(197, 160, 89, 0.2);
        }

        .btn-prestige-secondary {
            background: #f1f5f9;
            color: var(--text-muted);
        }

        .btn-prestige-secondary:hover {
            background: #e2e8f0;
            color: var(--dark-bg);
        }

        /* Style du formulaire */
        .form-section {
            margin-bottom: 2rem;
        }

        /* On cible les éléments générés par Symfony form_widget */
        .form-section input, .form-section textarea, .form-section select {
            width: 100%;
            padding: 0.875rem;
            border: 1px solid #e2e8f0;
            border-radius: 10px;
            margin-top: 0.5rem;
            margin-bottom: 1.25rem;
            transition: all 0.3s ease;
        }

        .form-section input:focus {
            border-color: var(--gold-primary);
            box-shadow: 0 0 0 4px rgba(197, 160, 89, 0.1);
            outline: none;
        }

        .actions-bar {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #f1f5f9;
        }

        .delete-section {
            margin-top: 3rem;
            padding: 1.5rem;
            background: #fff1f2;
            border-radius: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .delete-text {
            color: #be123c;
            font-weight: 600;
            font-size: 0.9rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="prestige-container">
        <div class="prestige-header">
            <h2 class="prestige-title">Modifier l'evenement</h2>
            <span class="category-id" style="color: var(--gold-primary); font-weight: 700;">#{{ event.id }}</span>
        </div>

        <div class="form-section">
            {{ include('event/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>

        <div class="actions-bar">
            <button type="submit" class="btn-prestige btn-prestige-primary" form="event_form">
                <i class="fas fa-save"></i>
                <span>Mettre à jour l'evenement</span>
            </button>
            <a href="{{ path('app_event_index') }}" class="btn-prestige btn-prestige-secondary">
                <i class="fas fa-arrow-left"></i>
                <span>Retour à la liste</span>
            </a>
        </div>

        <div class="delete-section">
            <span class="delete-text">Zone de danger : Supprimer définitivement cette conférence</span>
            {{ include('event/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
