<form method="post" action="{{ path('app_conference_delete', {'id': event.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');" style="display: inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
    
    <style>
        .btn-prestige-delete {
            width: 42px;
            height: 42px;
            background: #fff1f2;
            color: #be123c;
            border: 1px solid #fee2e2;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
        }

        .btn-prestige-delete:hover {
            background: #be123c;
            color: white;
            border-color: #be123c;
            transform: scale(1.05);
        }
    </style>

    <button class="btn-prestige-delete" title="Supprimer définitivement">
        <i class="fas fa-trash-alt"></i>
    </button>
</form>
