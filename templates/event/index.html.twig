{% extends 'base_admin.html.twig' %}

{% block title %}Événements - Administration Prestige{% endblock %}

{% block page_title %}Gestion des Événements{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --gold-primary: #c5a059;
            --gold-hover: #b48c3e;
            --dark-bg: #0f172a;
            --text-muted: #64748b;
            --success-green: #10b981;
        }

        .action-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            background: white;
            padding: 1.5rem 2rem;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.02);
        }

        .btn-prestige-add {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.875rem 1.5rem;
            background: var(--dark-bg);
            color: white;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            border: 1px solid var(--dark-bg);
        }

        .btn-prestige-add:hover {
            background: var(--gold-primary);
            border-color: var(--gold-primary);
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(197, 160, 89, 0.2);
        }

        .table-container {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.03);
            border: 1px solid #f1f5f9;
        }

        .prestige-table {
            width: 100%;
            border-collapse: collapse;
            text-align: left;
        }

        .prestige-table thead {
            background: #f8fafc;
            border-bottom: 2px solid #f1f5f9;
        }

        .prestige-table th {
            padding: 1.25rem 1.5rem;
            font-size: 0.7rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--text-muted);
        }

        .prestige-table td {
            padding: 1.25rem 1.5rem;
            font-size: 0.9rem;
            color: var(--dark-bg);
            border-bottom: 1px solid #f1f5f9;
            vertical-align: middle;
        }

        .prestige-table tr:hover {
            background-color: rgba(197, 160, 89, 0.02);
        }

        .item-id {
            font-family: 'Cormorant Garamond', serif;
            font-weight: 700;
            color: var(--gold-primary);
            font-size: 1.1rem;
        }

        .event-title {
            font-weight: 600;
            color: var(--dark-bg);
            display: block;
        }

        .event-price {
            font-weight: 700;
            color: var(--success-green);
            background: rgba(16, 185, 129, 0.1);
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.85rem;
        }

        .event-img {
            width: 60px;
            height: 40px;
            object-fit: cover;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            border: 1px solid #eee;
        }

        .no-img {
            font-size: 0.75rem;
            color: var(--text-muted);
            font-style: italic;
        }

        .badge-places {
            background: #f1f5f9;
            color: var(--dark-bg);
            padding: 0.25rem 0.6rem;
            border-radius: 6px;
            font-weight: 600;
            font-size: 0.8rem;
        }

        .actions-cell {
            display: flex;
            gap: 0.5rem;
            align-items: center;
            justify-content: flex-end;
        }

        .btn-action {
            width: 34px;
            height: 34px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
            text-decoration: none;
            transition: all 0.2s ease;
            font-size: 0.85rem;
        }

        .btn-view {
            background: #f1f5f9;
            color: var(--text-muted);
        }

        .btn-view:hover {
            background: var(--dark-bg);
            color: white;
        }

        .btn-edit {
            background: rgba(197, 160, 89, 0.1);
            color: var(--gold-primary);
        }

        .btn-edit:hover {
            background: var(--gold-primary);
            color: white;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--text-muted);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="action-bar">
        <div class="breadcrumb">
            <span style="color: var(--text-muted); font-size: 0.9rem;">Administration / </span>
            <span style="font-weight: 600; font-size: 0.9rem;">Événements</span>
        </div>
        <a href="{{ path('app_event_new') }}" class="btn-prestige-add">
            <i class="fas fa-plus"></i>
            <span>Ajouter un événement</span>
        </a>
    </div>

    <div class="table-container">
        <table class="prestige-table">
            <thead>
                <tr>
                    <th style="width: 60px;">ID</th>
                    <th>Image</th>
                    <th>Événement</th>
                    <th>Date & Lieu</th>
                    <th>Prix</th>
                    <th>Places</th>
                    <th style="width: 150px; text-align: right;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events %}
                    <tr>
                        <td>
                            <span class="item-id">#{{ event.id }}</span>
                        </td>
                        <td>
                            {% if event.image %}
                                <img src="{{ asset('uploads/' ~ event.image) }}" alt="{{ event.titre }}" class="event-img">
                            {% else %}
                                <span class="no-img">Aucune</span>
                            {% endif %}
                        </td>
                        <td>
                            <span class="event-title">{{ event.titre }}</span>
                            <small style="color: var(--text-muted); font-size: 0.75rem;">
                                {{ event.description|length > 40 ? event.description|slice(0, 40) ~ '...' : event.description }}
                            </small>
                        </td>
                        <td>
                            <div style="font-size: 0.85rem; margin-bottom: 0.2rem;">
                                <i class="far fa-calendar-alt" style="color: var(--gold-primary); width: 15px;"></i>
                                {{ event.date ? event.date|date('d/m/Y à H:i') : 'Non défini' }}
                            </div>
                            <div style="font-size: 0.85rem; color: var(--text-muted);">
                                <i class="fas fa-map-marker-alt" style="color: var(--gold-primary); width: 15px;"></i>
                                {{ event.lieu ? event.lieu.nom : 'Non défini' }}
                            </div>
                        </td>
                        <td>
                            <span class="event-price">{{ event.prix ? event.prix ~ ' €' : 'Gratuit' }}</span>
                        </td>
                        <td>
                            <span class="badge-places">{{ event.nombreDePlaces }}</span>
                        </td>
                        <td>
                            <div class="actions-cell">
                                <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn-action btn-view" title="Voir">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn-action btn-edit" title="Modifier">
                                    <i class="fas fa-pen"></i>
                                </a>
                                {{ include('event/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">
                            <div class="empty-state">
                                <i class="fas fa-calendar-times" style="font-size: 3rem; color: #e2e8f0; margin-bottom: 1rem; display: block;"></i>
                                <p>Aucun événement n'a été trouvé.</p>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
