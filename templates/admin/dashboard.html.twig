{% extends 'base_admin.html.twig' %}

{% block title %}Tableau de bord Prestige | Administration{% endblock %}
{% block page_title %}Tableau de bord{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@600;700&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --gold-primary: #c5a059;
            --gold-secondary: #e2c275;
            --dark-bg: #0f172a;
            --text-dark: #1e293b;
            --text-muted: #64748b;
            --bg-light: #f8fafc;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background-color: var(--bg-light);
            color: var(--text-dark);
        }

        .dashboard-header {
            margin-bottom: 3rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid #e2e8f0;
        }

        .dashboard-header h1 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--dark-bg);
            margin: 0;
        }

        .dashboard-header p {
            color: var(--text-muted);
            font-size: 1rem;
            margin-top: 0.5rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            margin-top: 20px;
        }

        .stat-card {
            background: white;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.04);
            border: 1px solid rgba(226, 232, 240, 0.8);
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(197, 160, 89, 0.1);
            border-color: var(--gold-secondary);
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, transparent 50%, rgba(197, 160, 89, 0.05) 50%);
            z-index: 0;
        }

        .stat-info {
            position: relative;
            z-index: 1;
        }

        .stat-label {
            font-size: 0.85rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            color: var(--text-muted);
            margin-bottom: 1rem;
            display: block;
        }

        .stat-value {
            font-family: 'Cormorant Garamond', serif;
            font-size: 3.5rem;
            font-weight: 700;
            color: var(--dark-bg);
            line-height: 1;
            margin: 0;
        }

        .stat-trend {
            margin-top: 1.5rem;
            font-size: 0.85rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .trend-up { color: #10b981; }
        .trend-neutral { color: var(--gold-primary); }

        .stat-icon {
            position: absolute;
            bottom: 2rem;
            right: 2rem;
            font-size: 2.5rem;
            color: var(--gold-primary);
            opacity: 0.2;
        }

        .quick-actions {
            margin-top: 4rem;
        }

        .section-title {
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 2rem;
            color: var(--dark-bg);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .section-title::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #e2e8f0;
        }

        .action-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            padding: 1rem 2rem;
            background: var(--dark-bg);
            color: white;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            border: 1px solid var(--dark-bg);
        }

        .action-btn:hover {
            background: transparent;
            color: var(--dark-bg);
            transform: translateX(5px);
        }

        .action-btn.gold {
            background: var(--gold-primary);
            border-color: var(--gold-primary);
        }

        .action-btn.gold:hover {
            background: transparent;
            color: var(--gold-primary);
        }

        /* Style graphique */
        .chart-container {
    background: white;
    border-radius: 20px;
    padding: 15px 20px;
    margin-top: 2rem;
    max-width: 1000px; /* Limite la largeur */
    width: 100%;
    box-shadow: 0 10px 20px rgba(0,0,0,0.05);
}

.chart-container canvas {
    height: 500px !important; /* Hauteur fixe pour les charts */
}
    </style>
{% endblock %}

{% block body %}
    <div class="dashboard-header">
        <h1>Tableau de bord</h1>
        <p>Bienvenue dans votre espace de gestion Prestige.</p>
    </div>

    <div class="stats-grid">
        <!-- Carte Catégories -->
        <div class="stat-card">
            <div class="stat-info">
                <span class="stat-label">Catégories</span>
                <h2 class="stat-value">{{ categories|length }}</h2>
            </div>
            <div class="stat-trend trend-neutral">
                <span>Structure du catalogue</span>
            </div>
            <div class="stat-icon">
                <i class="fas fa-th-large"></i>
            </div>
        </div>

        <!-- Carte Événements -->
        <div class="stat-card">
            <div class="stat-info">
                <span class="stat-label">Événements</span>
                <h2 class="stat-value">{{ events|length }}</h2>
            </div>
            <div class="stat-trend trend-up">
                <span>+ 12% ce mois-ci</span>
            </div>
            <div class="stat-icon">
                <i class="fas fa-calendar-alt"></i>
            </div>
        </div>

        <!-- Carte Réservations -->
        <div class="stat-card">
            <div class="stat-info">
                <span class="stat-label">Réservations</span>
                <h2 class="stat-value">{{ reservations|length }}</h2>
            </div>
            <div class="stat-trend trend-up">
                <span>Activité en hausse</span>
            </div>
            <div class="stat-icon">
                <i class="fas fa-ticket-alt"></i>
            </div>
        </div>
    </div>

    <!-- Graphique 1 : Réservations par événement -->
    <div class="chart-container">
        <h3 class="section-title">Nombre de Réservations par Événement</h3>
        <canvas id="reservationsChart"></canvas>
    </div>

    <!-- Graphique 2 : Répartition des événements par catégorie -->
    <div class="chart-container">
        <h3 class="section-title">Répartition des Événements par Catégorie</h3>
        <canvas id="eventsCategoryChart"></canvas>
    </div>

    <!-- Actions rapides -->
   
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script> <!-- Pour les labels -->

<script>
    // Chart 1 : Réservations par événement (barres arrondies + animation)
    const ctx1 = document.getElementById('reservationsChart').getContext('2d');
    const reservationsChart = new Chart(ctx1, {
        type: 'bar',
        data: {
            labels: [
                {% for event in events %}
                    "{{ event.titre }}"{% if not loop.last %}, {% endif %}
                {% endfor %}
            ],
            datasets: [{
                label: 'Nombre de réservations',
                data: [
                    {% for event in events %}
                        {{ event.reservations|length }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                ],
                backgroundColor: 'rgba(197, 160, 89, 0.6)',
                borderColor: 'rgba(197, 160, 89, 1)',
                borderWidth: 1,
                borderRadius: 12, // coins arrondis
                borderSkipped: false
            }]
        },
        options: {
            responsive: true,
            animation: {
                duration: 1500, // animation 1.5s
                easing: 'easeOutQuart'
            },
            plugins: {
                legend: { display: true, position: 'top' },
                tooltip: { mode: 'index', intersect: false },
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: { stepSize: 1 }
                }
            }
        }
    });

    // Chart 2 : Répartition des événements par catégorie (pie + pourcentages)
    const ctx2 = document.getElementById('eventsCategoryChart').getContext('2d');
    const eventsCategoryChart = new Chart(ctx2, {
        type: 'pie',
        data: {
            labels: [
                {% for category in categories %}
                    "{{ category.name }}"{% if not loop.last %}, {% endif %}
                {% endfor %}
            ],
            datasets: [{
                label: 'Événements par catégorie',
                data: [
                    {% for category in categories %}
                        {{ category.events|length }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                ],
                backgroundColor: [
                    'rgba(197, 160, 89, 0.6)',
                    'rgba(226, 194, 117, 0.6)',
                    'rgba(16, 185, 129, 0.6)',
                    'rgba(59, 130, 246, 0.6)',
                    'rgba(168, 85, 247, 0.6)'
                ],
                borderColor: 'rgba(255,255,255,1)',
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            animation: {
                animateScale: true, // animation de l'apparition
                animateRotate: true,
                duration: 1200,
                easing: 'easeOutBounce'
            },
            plugins: {
                legend: { position: 'right' },
                datalabels: {
                    color: '#fff',
                    formatter: (value, context) => {
                        let sum = context.chart.data.datasets[0].data.reduce((a, b) => a + b, 0);
                        let percentage = (value * 100 / sum).toFixed(1) + '%';
                        return percentage;
                    },
                    font: { weight: 'bold', size: 14 }
                }
            }
        },
        plugins: [ChartDataLabels] // plugin pour afficher les pourcentages
    });
</script>

{% endblock %}
