{% extends 'base_admin.html.twig' %}

{% block title %}Tableau de bord Prestige | Administration{% endblock %}

{% block page_title %}Tableau de bord{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@600;700&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --gold-primary: #c5a059;
            --gold-secondary: #e2c275;
            --dark-bg: #0f172a;
            --text-dark: #1e293b;
            --text-muted: #64748b;
            --bg-light: #f8fafc;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background-color: var(--bg-light);
            color: var(--text-dark);
        }

        .dashboard-header {
            margin-bottom: 3rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid #e2e8f0;
        }

        .dashboard-header h1 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--dark-bg);
            margin: 0;
        }

        .dashboard-header p {
            color: var(--text-muted);
            font-size: 1rem;
            margin-top: 0.5rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            margin-top: 20px;
        }

        .stat-card {
            background: white;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.04);
            border: 1px solid rgba(226, 232, 240, 0.8);
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(197, 160, 89, 0.1);
            border-color: var(--gold-secondary);
        }

        /* Décoration subtile sur les cartes */
        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, transparent 50%, rgba(197, 160, 89, 0.05) 50%);
            z-index: 0;
        }

        .stat-info {
            position: relative;
            z-index: 1;
        }

        .stat-label {
            font-size: 0.85rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            color: var(--text-muted);
            margin-bottom: 1rem;
            display: block;
        }

        .stat-value {
            font-family: 'Cormorant Garamond', serif;
            font-size: 3.5rem;
            font-weight: 700;
            color: var(--dark-bg);
            line-height: 1;
            margin: 0;
        }

        .stat-trend {
            margin-top: 1.5rem;
            font-size: 0.85rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .trend-up { color: #10b981; }
        .trend-neutral { color: var(--gold-primary); }

        .stat-icon {
            position: absolute;
            bottom: 2rem;
            right: 2rem;
            font-size: 2.5rem;
            color: var(--gold-primary);
            opacity: 0.2;
        }

        /* Section d'activité récente ou raccourcis */
        .quick-actions {
            margin-top: 4rem;
        }

        .section-title {
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 2rem;
            color: var(--dark-bg);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .section-title::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #e2e8f0;
        }

        .action-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            padding: 1rem 2rem;
            background: var(--dark-bg);
            color: white;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            border: 1px solid var(--dark-bg);
        }

        .action-btn:hover {
            background: transparent;
            color: var(--dark-bg);
            transform: translateX(5px);
        }

        .action-btn.gold {
            background: var(--gold-primary);
            border-color: var(--gold-primary);
        }

        .action-btn.gold:hover {
            background: transparent;
            color: var(--gold-primary);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="dashboard-header">
        <h1>Tableau de bord</h1>
        <p>Bienvenue dans votre espace de gestion Prestige.</p>
    </div>

    <div class="stats-grid">
        <!-- Carte Catégories -->
        <div class="stat-card">
            <div class="stat-info">
                <span class="stat-label">Catégories</span>
                <h2 class="stat-value">{{ categories|length }}</h2>
            </div>
            <div class="stat-trend trend-neutral">
                <span>Structure du catalogue</span>
            </div>
            <div class="stat-icon">
                <i class="fas fa-th-large"></i>
            </div>
        </div>

        <!-- Carte Événements -->
        <div class="stat-card">
            <div class="stat-info">
                <span class="stat-label">Événements</span>
                <h2 class="stat-value">{{ events|length }}</h2>
            </div>
            <div class="stat-trend trend-up">
                <span>+ 12% ce mois-ci</span>
            </div>
            <div class="stat-icon">
                <i class="fas fa-calendar-alt"></i>
            </div>
        </div>

        <!-- Carte Réservations -->
        <div class="stat-card">
            <div class="stat-info">
                <span class="stat-label">Réservations</span>
                <h2 class="stat-value">{{ reservations|length }}</h2>
            </div>
            <div class="stat-trend trend-up">
                <span>Activité en hausse</span>
            </div>
            <div class="stat-icon">
                <i class="fas fa-ticket-alt"></i>
            </div>
        </div>
    </div>

    <div class="quick-actions">
        <h3 class="section-title">Actions Rapides</h3>
        <div style="display: flex; gap: 20px; flex-wrap: wrap;">
            <a href="#" class="action-btn gold">
                <i class="fas fa-plus"></i> Nouvel Événement
            </a>
            <a href="#" class="action-btn">
                <i class="fas fa-list"></i> Voir les Réservations
            </a>
            <a href="#" class="action-btn">
                <i class="fas fa-cog"></i> Paramètres
            </a>
        </div>
    </div>
{% endblock %}
