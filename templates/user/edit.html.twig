{% extends 'base_admin.html.twig' %}

{% block title %}Modifier Utilisateur - Administration{% endblock %}
{% block page_title %}Modifier un utilisateur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --gold-primary: #c5a059;
            --gold-hover: #b48c3e;
            --dark-bg: #0f172a;
            --text-muted: #64748b;
        }

        .prestige-container {
            max-width: 800px;
            margin: 2rem auto;
            background: white;
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            border: 1px solid #f1f5f9;
        }

        .prestige-header {
            margin-bottom: 2rem;
            border-bottom: 2px solid #f8fafc;
            padding-bottom: 1rem;
        }

        .prestige-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--dark-bg);
            margin: 0;
        }

        .actions-bar {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .btn-prestige {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.9rem;
            text-decoration: none;
            cursor: pointer;
            border: none;
            transition: all 0.3s ease;
        }

        .btn-prestige-primary {
            background: var(--dark-bg);
            color: white;
        }

        .btn-prestige-primary:hover {
            background: var(--gold-primary);
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(197,160,89,0.2);
        }

        .btn-prestige-secondary {
            background: #f1f5f9;
            color: var(--text-muted);
        }

        .btn-prestige-secondary:hover {
            background: #e2e8f0;
            color: var(--dark-bg);
        }
    </style>
{% endblock %}

{% block body %}
<div class="prestige-container">
    <div class="prestige-header">
        <h2 class="prestige-title">Modifier l'utilisateur</h2>
    </div>

    <div class="form-section">
        {{ include('user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    </div>

    <div class="actions-bar">
        <button type="submit" class="btn-prestige btn-prestige-primary" form="user_form">
            <i class="fas fa-pen"></i> Mettre à jour
        </button>

        <a href="{{ path('app_user_index') }}" class="btn-prestige btn-prestige-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>

        {{ include('user/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
