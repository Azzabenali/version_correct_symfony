{% extends 'base_admin.html.twig' %}

{% block title %}Modifier Catégorie | Prestige Admin{% endblock %}

{% block page_title %}Modifier une catégorie{% endblock %}

{% block body %}
    <div style="max-width: 700px; margin: 0 auto;">
        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 2.5rem;">
            <h2 style="font-family: 'Cormorant Garamond', serif; font-size: 2.2rem; color: #0f172a;">Modifier la catégorie</h2>
            <div style="display: flex; gap: 1rem; align-items: center;">
                <a href="{{ path('app_category_index') }}" style="color: #64748b; text-decoration: none; font-weight: 600; font-size: 0.9rem;">Retour</a>
                {{ include('category/_delete_form.html.twig') }}
            </div>
        </div>

        {{ include('category/_form.html.twig', {'button_label': 'Mettre à jour la catégorie'}) }}
    </div>
{% endblock %}