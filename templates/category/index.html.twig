{% extends 'base_admin.html.twig' %}

{% block title %}Catégories - Administration Prestige{% endblock %}

{% block page_title %}Gestion des Catégories{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --gold-primary: #c5a059;
            --gold-hover: #b48c3e;
            --dark-bg: #0f172a;
            --text-muted: #64748b;
        }

        .action-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            background: white;
            padding: 1.5rem 2rem;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.02);
        }

        .btn-prestige-add {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.875rem 1.5rem;
            background: var(--dark-bg);
            color: white;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            border: 1px solid var(--dark-bg);
        }

        .btn-prestige-add:hover {
            background: var(--gold-primary);
            border-color: var(--gold-primary);
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(197, 160, 89, 0.2);
        }

        .table-container {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.03);
            border: 1px solid #f1f5f9;
        }

        .prestige-table {
            width: 100%;
            border-collapse: collapse;
            text-align: left;
        }

        .prestige-table thead {
            background: #f8fafc;
            border-bottom: 2px solid #f1f5f9;
        }

        .prestige-table th {
            padding: 1.25rem 2rem;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--text-muted);
        }

        .prestige-table td {
            padding: 1.25rem 2rem;
            font-size: 0.95rem;
            color: var(--dark-bg);
            border-bottom: 1px solid #f1f5f9;
            vertical-align: middle;
        }

        .prestige-table tr:last-child td {
            border-bottom: none;
        }

        .prestige-table tr:hover {
            background-color: rgba(197, 160, 89, 0.02);
        }

        .category-id {
            font-family: 'Cormorant Garamond', serif;
            font-weight: 700;
            color: var(--gold-primary);
            font-size: 1.1rem;
        }

        .category-name {
            font-weight: 600;
            color: var(--dark-bg);
        }

        .actions-cell {
            display: flex;
            gap: 0.75rem;
            align-items: center;
        }

        .btn-action {
            width: 38px;
            height: 38px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
            text-decoration: none;
            transition: all 0.2s ease;
            font-size: 0.9rem;
        }

        .btn-view {
            background: #f1f5f9;
            color: var(--text-muted);
        }

        .btn-view:hover {
            background: var(--dark-bg);
            color: white;
        }

        .btn-edit {
            background: rgba(197, 160, 89, 0.1);
            color: var(--gold-primary);
        }

        .btn-edit:hover {
            background: var(--gold-primary);
            color: white;
        }

        /* Style spécifique pour le formulaire de suppression */
        .delete-form-container form {
            display: inline;
        }

        .btn-delete-trigger {
            width: 38px;
            height: 38px;
            background: #fff1f2;
            color: #be123c;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-delete-trigger:hover {
            background: #be123c;
            color: white;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--text-muted);
        }

        .empty-state i {
            font-size: 3rem;
            color: #e2e8f0;
            margin-bottom: 1.5rem;
            display: block;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="action-bar">
        <div class="breadcrumb">
            <span style="color: var(--text-muted); font-size: 0.9rem;">Administration / </span>
            <span style="font-weight: 600; font-size: 0.9rem;">Catégories</span>
        </div>
        <a href="{{ path('app_category_new') }}" class="btn-prestige-add">
            <i class="fas fa-plus"></i>
            <span>Ajouter une catégorie</span>
        </a>
    </div>

    <div class="table-container">
        <table class="prestige-table">
            <thead>
                <tr>
                    <th style="width: 100px;">ID</th>
                    <th>Nom de la Catégorie</th>
                    <th style="width: 200px; text-align: right;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>
                            <span class="category-id">#{{ category.id }}</span>
                        </td>
                        <td>
                            <span class="category-name">{{ category.name }}</span>
                        </td>
                        <td>
                            <div class="actions-cell" style="justify-content: flex-end;">
                                <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn-action btn-view" title="Voir">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn-action btn-edit" title="Modifier">
                                    <i class="fas fa-pen"></i>
                                </a>
                                <div class="delete-form-container">
                                    {# On suppose que le bouton de suppression est un bouton stylisé dans le template inclus #}
                                    {{ include('category/_delete_form.html.twig') }}
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">
                            <div class="empty-state">
                                <i class="fas fa-folder-open"></i>
                                <p>Aucune catégorie n'a été trouvée dans votre catalogue.</p>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
