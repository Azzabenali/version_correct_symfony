{% extends 'base_admin.html.twig' %}

{% block title %}Détails Catégorie | Prestige Admin{% endblock %}

{% block page_title %}Détails de la catégorie{% endblock %}

{% block body %}
    <div style="max-width: 800px; margin: 0 auto;">
        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 2.5rem;">
            <h2 style="font-family: 'Cormorant Garamond', serif; font-size: 2.2rem; color: #0f172a;">Fiche Catégorie</h2>
            <div style="display: flex; gap: 1rem;">
                <a href="{{ path('app_category_index') }}" class="btn-action-secondary" style="padding: 0.75rem 1.5rem; background: #f1f5f9; color: #64748b; border-radius: 10px; text-decoration: none; font-weight: 600; font-size: 0.85rem;">Retour</a>
                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn-action-primary" style="padding: 0.75rem 1.5rem; background: #c5a059; color: white; border-radius: 10px; text-decoration: none; font-weight: 600; font-size: 0.85rem;">Modifier</a>
            </div>
        </div>

        <div style="background: white; border-radius: 24px; overflow: hidden; box-shadow: 0 20px 50px rgba(0,0,0,0.04); border: 1px solid #f1f5f9;">
            <div style="background: #0f172a; padding: 2rem; color: white; display: flex; align-items: center; gap: 1.5rem;">
                <div style="width: 60px; height: 60px; background: rgba(197, 160, 89, 0.2); border-radius: 15px; display: flex; align-items: center; justify-content: center; color: #c5a059; font-size: 1.5rem;">
                    <i class="fas fa-tag"></i>
                </div>
                <div>
                    <span style="font-size: 0.75rem; text-transform: uppercase; letter-spacing: 2px; opacity: 0.6;">Identifiant #{{ category.id }}</span>
                    <h3 style="font-family: 'Cormorant Garamond', serif; font-size: 1.8rem; margin: 0;">{{ category.name }}</h3>
                </div>
            </div>
            
            <div style="padding: 3rem;">
                <table style="width: 100%; border-collapse: collapse;">
                    <tr style="border-bottom: 1px solid #f1f5f9;">
                        <th style="text-align: left; padding: 1.5rem 0; color: #64748b; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 1px; width: 200px;">Nom de la catégorie</th>
                        <td style="padding: 1.5rem 0; font-weight: 600; color: #0f172a; font-size: 1.1rem;">{{ category.name }}</td>
                    </tr>
                    {# Ajoutez d'autres lignes ici si nécessaire #}
                </table>
                
                <div style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid #f1f5f9; display: flex; justify-content: flex-end;">
                    {{ include('category/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}