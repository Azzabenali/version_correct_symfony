{% extends 'base_admin.html.twig' %}

{% block title %}Nouvelle Catégorie | Prestige Admin{% endblock %}

{% block page_title %}Ajouter une catégorie{% endblock %}

{% block body %}
    <div style="max-width: 700px; margin: 0 auto;">
        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 2.5rem;">
            <h2 style="font-family: 'Cormorant Garamond', serif; font-size: 2.2rem; color: #0f172a;">Créer une nouvelle catégorie</h2>
            <a href="{{ path('app_category_index') }}" style="color: #64748b; text-decoration: none; font-weight: 600; font-size: 0.9rem; display: flex; align-items: center; gap: 0.5rem;">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        </div>

        {{ include('category/_form.html.twig') }}
    </div>
{% endblock %}