{% extends 'base_admin.html.twig' %}

{% block title %}Ticket{% endblock %}
{% block page_title %}Détails du ticket{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --gold-primary: #c5a059;
            --dark-bg: #0f172a;
            --text-muted: #64748b;
        }

        .prestige-container {
            max-width: 900px;
            margin: 2rem auto;
            background: white;
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            border: 1px solid #f1f5f9;
        }

        .prestige-header {
            margin-bottom: 2.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #f8fafc;
        }

        .prestige-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--dark-bg);
            margin: 0;
        }

        .details-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 2rem;
        }

        .details-table th,
        .details-table td {
            text-align: left;
            padding: 1rem;
            border-bottom: 1px solid #f1f5f9;
        }

        .details-table th {
            color: var(--text-muted);
            font-weight: 600;
            width: 200px;
        }

        .btn-prestige {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.25rem;
            border-radius: 10px;
            font-weight: 600;
            text-decoration: none;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }

        .btn-prestige-primary {
            background: var(--dark-bg);
            color: white;
        }

        .btn-prestige-primary:hover {
            background: var(--gold-primary);
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(197, 160, 89, 0.2);
        }

        .btn-prestige-secondary {
            background: #f1f5f9;
            color: var(--text-muted);
        }

        .btn-prestige-secondary:hover {
            background: #e2e8f0;
            color: var(--dark-bg);
        }
    </style>
{% endblock %}

{% block body %}
<div class="prestige-container">
    <div class="prestige-header">
        <h2 class="prestige-title">Ticket #{{ ticket.id }}</h2>
    </div>

    <table class="details-table">
        <tr>
            <th>Nom</th>
            <td>{{ ticket.name ?: '-' }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ ticket.price ?: '-' }} €</td>
        </tr>
        <tr>
            <th>Nombre de places</th>
            <td>{{ ticket.quantity ?: '-' }}</td>
        </tr>
        <tr>
            <th>Événement</th>
            <td>{{ ticket.event ? ticket.event.titre : '-' }}</td>
        </tr>
        <tr>
            <th>Réservations de l'événement</th>
            <td>
                {% if ticket.event is not null %}
                   {% set reservations = ticket.event ? ticket.event.getReservations() : [] %}
{% if reservations|length > 0 %}
    {{ reservations|length }} réservation(s)
{% else %}
    Aucune réservation
{% endif %}

            </td>
        </tr>
        <tr>
            <th>Réservation associée au ticket</th>
            <td>{{ ticket.reservation ? ticket.reservation.id : '-' }}</td>
        </tr>
    </table>

    <div class="actions-bar" style="display: flex; gap: 1rem;">
        <a href="{{ path('app_ticket_index') }}" class="btn-prestige btn-prestige-secondary">
            <i class="fas fa-arrow-left"></i>
            Retour à la liste
        </a>

        <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}" class="btn-prestige btn-prestige-primary">
            <i class="fas fa-pen"></i>
            Modifier
        </a>

        {{ include('ticket/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}