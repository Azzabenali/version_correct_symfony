{% extends 'base_admin.html.twig' %}

{% block title %}Tickets - Administration Prestige{% endblock %}
{% block page_title %}Gestion des Tickets{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --gold-primary: #c5a059;
            --gold-hover: #b48c3e;
            --dark-bg: #0f172a;
            --text-muted: #64748b;
        }

        .action-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            background: white;
            padding: 1.5rem 2rem;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.02);
        }

        .btn-prestige-add {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.875rem 1.5rem;
            background: var(--dark-bg);
            color: white;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            border: 1px solid var(--dark-bg);
        }

        .btn-prestige-add:hover {
            background: var(--gold-primary);
            border-color: var(--gold-primary);
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(197, 160, 89, 0.2);
        }

        .table-container {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.03);
            border: 1px solid #f1f5f9;
        }

        .prestige-table {
            width: 100%;
            border-collapse: collapse;
        }

        .prestige-table thead {
            background: #f8fafc;
            border-bottom: 2px solid #f1f5f9;
        }

        .prestige-table th {
            padding: 1.25rem 1.5rem;
            font-size: 0.7rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--text-muted);
            text-align: left;
        }

        .prestige-table td {
            padding: 1.25rem 1.5rem;
            font-size: 0.9rem;
            color: var(--dark-bg);
            border-bottom: 1px solid #f1f5f9;
            vertical-align: middle;
        }

        .prestige-table tr:hover {
            background-color: rgba(197, 160, 89, 0.02);
        }

        .item-id {
            font-weight: 700;
            color: var(--gold-primary);
        }

        .actions-cell {
            display: flex;
            gap: 0.5rem;
            justify-content: flex-end;
        }

        .btn-action {
            width: 34px;
            height: 34px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
            text-decoration: none;
            transition: all 0.2s ease;
            font-size: 0.85rem;
        }

        .btn-view {
            background: #f1f5f9;
            color: var(--text-muted);
        }

        .btn-view:hover {
            background: var(--dark-bg);
            color: white;
        }

        .btn-edit {
            background: rgba(197, 160, 89, 0.1);
            color: var(--gold-primary);
        }

        .btn-edit:hover {
            background: var(--gold-primary);
            color: white;
        }

        .btn-delete {
            background: #fee2e2;
            color: #be123c;
        }

        .btn-delete:hover {
            background: #fca5a5;
            color: white;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--text-muted);
        }
    </style>
    {% endblock %}
{% block body %}
<div class="table-container">
    <table class="prestige-table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Quantité</th>
                <th>Prix</th>
                <th>Utilisateur</th>
                <th>Événement</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for ticket in tickets %}
                <tr>
                    <td>{{ ticket.name }}</td>
                    <td>{{ ticket.quantity }}</td>
                    <td>{{ ticket.price }} €</td>
                    <td>
                        {% if ticket.reservation and ticket.reservation.user %}
                            {{ ticket.reservation.user.name }}
                        {% else %}
                            Inconnu
                        {% endif %}
                    </td>
                    <td>
                        {% if ticket.event %}
                            {{ ticket.event.titre }}
                        {% else %}
                            Inconnu
                        {% endif %}
                    </td>
                    <td class="actions-cell">
    {# Bouton Voir #}
    <a href="{{ path('app_ticket_show', {'id': ticket.id}) }}" class="btn-action btn-view" title="Voir">
        <i class="fas fa-eye"></i>
    </a>

    {# Bouton Modifier #}
    <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}" class="btn-action btn-edit" title="Modifier">
        <i class="fas fa-pen"></i>
    </a>

    {# Bouton Supprimer #}
    <form method="post" 
          action="{{ path('app_ticket_delete', {'id': ticket.id}) }}" 
          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce ticket ?');" 
          style="display:inline">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ticket.id) }}">
        <button class="btn-action btn-delete" type="submit" title="Supprimer">
            <i class="fas fa-trash-alt"></i>
        </button>
    </form>
</td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="6" style="text-align:center; color:var(--text-muted)">Aucun ticket disponible.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}