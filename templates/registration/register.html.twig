{% extends 'base.html.twig' %}

{% block title %}Inscription Prestige | Événements d'Exception{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@600;700&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --gold-primary: #c5a059;
            --gold-secondary: #e2c275;
            --dark-bg: #0f172a;
            --text-dark: #1e293b;
            --text-gold: #b48c3e;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8fafc;
        }

        .register-section {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: 
                linear-gradient(rgba(255, 255, 255, 0.85), rgba(255, 255, 255, 0.85)),
                url('https://images.unsplash.com/photo-1469334031218-e382a71b716b?auto=format&fit=crop&q=80&w=2070');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            padding: 40px 20px;
            position: relative;
        }

        /* Décoration latérale élégante */
        .register-section::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 30%;
            height: 100%;
            background: linear-gradient(135deg, var(--gold-primary), var(--gold-secondary));
            clip-path: polygon(0 0, 80% 0, 100% 100%, 0% 100%);
            opacity: 0.08;
            z-index: 1;
        }

        .register-container {
            position: relative;
            z-index: 10;
            width: 100%;
            max-width: 1100px;
            display: flex;
            background: white;
            border-radius: 30px;
            overflow: hidden;
            box-shadow: 0 40px 100px rgba(0, 0, 0, 0.12);
        }

        /* Partie visuelle gauche */
        .register-visual {
            flex: 1;
            background: linear-gradient(rgba(15, 23, 42, 0.4), rgba(15, 23, 42, 0.4)),
                        url('https://images.unsplash.com/photo-1533174072545-7a4b6ad7a6c3?auto=format&fit=crop&q=80&w=2070');
            background-size: cover;
            background-position: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 4rem;
            color: white;
        }

        .register-visual h2 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 3.5rem;
            line-height: 1.1;
            margin-bottom: 1.5rem;
        }

        .register-visual p {
            font-size: 1.1rem;
            opacity: 0.9;
            font-weight: 300;
            letter-spacing: 1px;
            line-height: 1.6;
        }

        .feature-list {
            margin-top: 3rem;
            list-style: none;
            padding: 0;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1.25rem;
            font-size: 0.95rem;
            font-weight: 500;
        }

        .feature-icon {
            width: 24px;
            height: 24px;
            background: var(--gold-primary);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.7rem;
        }

        /* Partie formulaire droite */
        .register-form-area {
            flex: 1.2;
            padding: 4rem 5rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: white;
        }

        .brand-logo {
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--gold-primary);
            margin-bottom: 2.5rem;
            text-transform: uppercase;
            letter-spacing: 4px;
        }

        .form-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

        .form-subtitle {
            color: #94a3b8;
            margin-bottom: 3rem;
            font-size: 1rem;
        }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }

        .input-group {
            margin-bottom: 1.75rem;
        }

        .input-group.full-width {
            grid-column: span 2;
        }

        .input-group label {
            display: block;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #64748b;
            margin-bottom: 0.75rem;
        }

        .input-field, .select-field {
            width: 100%;
            padding: 0.875rem 0;
            border: none;
            border-bottom: 2px solid #f1f5f9;
            font-size: 1rem;
            font-weight: 500;
            color: var(--text-dark);
            transition: all 0.3s ease;
            background: transparent;
            border-radius: 0;
        }

        .input-field:focus, .select-field:focus {
            outline: none;
            border-bottom-color: var(--gold-primary);
        }

        .select-field {
            cursor: pointer;
            appearance: none;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23c5a059' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right center;
            background-size: 12px;
        }

        .btn-submit {
            width: 100%;
            padding: 1.25rem;
            background: var(--dark-bg);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 0.9rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 2px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 10px 20px rgba(15, 23, 42, 0.15);
            margin-top: 1rem;
        }

        .btn-submit:hover {
            background: var(--gold-primary);
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(197, 160, 89, 0.25);
        }

        .login-prompt {
            margin-top: 2.5rem;
            text-align: center;
            font-size: 0.95rem;
            color: #64748b;
        }

        .login-prompt a {
            color: var(--text-dark);
            font-weight: 700;
            text-decoration: none;
            border-bottom: 2px solid var(--gold-primary);
            padding-bottom: 2px;
        }

        /* Alertes Symfony */
        .form-error-message {
            color: #be123c;
            font-size: 0.75rem;
            font-weight: 600;
            margin-top: 0.5rem;
        }

        @media (max-width: 1000px) {
            .register-visual {
                display: none;
            }
            .register-container {
                max-width: 600px;
            }
            .register-form-area {
                padding: 4rem 3rem;
            }
        }

        @media (max-width: 600px) {
            .form-grid {
                grid-template-columns: 1fr;
            }
            .input-group.full-width {
                grid-column: span 1;
            }
        }
    </style>
{% endblock %}

{% block body %}
<section class="register-section">
    <div class="register-container">
        <!-- Côté Visuel -->
        <div class="register-visual">
            <p>REJOIGNEZ L'EXCELLENCE</p>
            <h2>Créez votre<br>Expérience.</h2>
            <p>Devenez membre de notre communauté exclusive et accédez aux événements les plus prestigieux.</p>
            
            <ul class="feature-list">
                <li class="feature-item">
                    <span class="feature-icon">✓</span>
                    Accès prioritaire aux ventes privées
                </li>
                <li class="feature-item">
                    <span class="feature-icon">✓</span>
                    Conciergerie dédiée 24/7
                </li>
                <li class="feature-item">
                    <span class="feature-icon">✓</span>
                    Invitations aux soirées VIP
                </li>
            </ul>
        </div>

        <!-- Côté Formulaire -->
        <div class="register-form-area">
            <div class="brand-logo">ÉVÉNEMENTIA</div>
            
            <h1 class="form-title">Inscription</h1>
            <p class="form-subtitle">Commencez votre voyage avec nous.</p>

            {{ form_start(registrationForm) }}
                <div class="form-grid">
                    <div class="input-group full-width">
                        <label for="{{ registrationForm.name.vars.id }}">Nom complet</label>
                        {{ form_widget(registrationForm.name, {'attr': {'class': 'input-field', 'placeholder': 'Jean Dupont'}}) }}
                        <div class="form-error-message">{{ form_errors(registrationForm.name) }}</div>
                    </div>

                    <div class="input-group full-width">
                        <label for="{{ registrationForm.email.vars.id }}">Adresse Email</label>
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'input-field', 'placeholder': 'jean@exemple.com'}}) }}
                        <div class="form-error-message">{{ form_errors(registrationForm.email) }}</div>
                    </div>

                    <div class="input-group full-width">
                        <label for="{{ registrationForm.plainPassword.vars.id }}">Mot de passe</label>
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input-field', 'placeholder': '••••••••••••'}}) }}
                        <div class="form-error-message">{{ form_errors(registrationForm.plainPassword) }}</div>
                    </div>

                    <div class="input-group full-width">
                        <label for="{{ registrationForm.roles.vars.id }}">Type de compte</label>
                        {{ form_widget(registrationForm.roles, {'attr': {'class': 'select-field'}}) }}
                        <div class="form-error-message">{{ form_errors(registrationForm.roles) }}</div>
                    </div>
                </div>

                <button type="submit" class="btn-submit">Créer mon compte</button>
            {{ form_end(registrationForm) }}

            <div class="login-prompt">
                Déjà membre ? <a href="{{ path('app_login') }}">Se connecter</a>
            </div>
        </div>
    </div>
</section>
{% endblock %}
